cluster_name = "DC1"
api_addr = "http://{{ ansible_default_ipv4.address }}:8200"
cluster_addr = "http://{{ ansible_default_ipv4.address }}:8201"

listener "tcp" {
     address = "0.0.0.0:8200"
     cluster_address = "{{ ansible_default_ipv4.address }}:8201"
     tls_disable = "true"
}

storage "consul" {
     address = "{{ ansible_default_ipv4.address }}:8500"
     token = "{{ secret_id }}"
     path = "vault/"
     scheme = "http"
}

ui = true
disable_mlock = true